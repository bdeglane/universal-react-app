{
  "name": "universal-react-app",
  "version": "1.0.0",
  "description": "Sample React universal app ",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "run:universal": "better-npm-run run:universal",
    "run:universal:dev": "better-npm-run run:universal:dev",
    "postinstall": "better-npm-run postinstall",
    "start": "npm run run:universal",
    "dev": "node_modules\\.bin\\concurrent -k \"npm run run:universal:dev\" \"gulp build:dev\" "
  },
  "betterScripts": {
    "run:universal": {
      "command": "node_modules\\.bin\\babel-node src/server.js",
      "env": {
        "BABEL_ENV": "node",
        "NODE_ENV": "production"
      }
    },
    "run:universal:dev": {
      "command": "node_modules\\.bin\\nodemon src/server.js --exec node_modules\\.bin\\babel-node",
      "env": {
        "BABEL_ENV": "node",
        "NODE_ENV": "development"
      }
    },
    "postinstall": {
      "command": "gulp build",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "repo": "git@github.com:bdeglane/universal-react-app.git",
  "author": "bdeglane@users.noreply.github.com",
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-require-ignore": "^0.0.2",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "better-npm-run": "^0.0.14",
    "css": "^2.2.1",
    "css-loader": "^0.26.1",
    "ejs": "^2.5.5",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "gulp": "^3.9.1",
    "gulp-util": "^3.0.8",
    "gulp-webserver": "^0.9.1",
    "loader": "^2.1.1",
    "node-sass": "^4.3.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.7",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "webpack": "^1.14.0"
  },
  "devDependencies": {
    "concurrently": "^3.1.0",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0"
  }
}
