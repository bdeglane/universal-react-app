{
  "plugins": [
    "react",
    "import"
  ],
  "extends": [
    "standard",
    "eslint-config-airbnb"
  ],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "never"
      }
    ],
    "linebreak-style": [
      "error",
      "windows"
    ],
    "comma-dangle": 0,
    "no-else-return": 0,
    "no-console": 0,
    "no-alert": 0,
    "import/prefer-default-export": 0,
    "arrow-body-style": [
      "error",
      "always"
    ],
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "no-unused-vars": [
      "error",
      {
        "caughtErrors": "none"
      }
    ]
  },
  "settings": {
    "import/parser": "babel-eslint",
    "import/resolve": {
      "moduleDirectory": [
        "node_modules",
        "src"
      ]
    }
  }
}

